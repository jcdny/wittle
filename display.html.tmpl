<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Tide Graphs</title>
    <style>
      body {
          font-family: Arial, sans-serif;
          margin: 40px;
      }

      /* Tab button styling */
      .tab-buttons {
          display: flex;
          gap: 10px;
          margin-bottom: 20px;
	      align: center;
      }

      .tab-buttons button {
          padding: 10px 18px;
          border: none;
          background: #ddd;
          cursor: pointer;
          border-radius: 4px;
          transition: 0.2s;
          font-size: 16px;
      }

      .tab-buttons button.active {
          background: #4a8dff;
          color: white;
      }

      /* Tab content */
      .tab-content {
          display: none;
          text-align: center;
      }
      .tab-content img, .static img {
          max-width: 90%;
          border-radius: 6px;
          box-shadow: 0 0 10px rgba(0,0,0,0.2);
      }
      .warn {
          color: #f42;
          font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h2>RUN ${asof}</h2>
    <p>
      last observation ${lastobs} tilt ${lasttilt} pitch ${lastpitch} ${warn}
    </p>
    <div class="tab-buttons">
      <button class="tab-btn active" onclick="openTab(0)">Short</button>
      <button class="tab-btn" onclick="openTab(1)">Medium</button>
      <button class="tab-btn" onclick="openTab(2)">Long</button>
      <button class="tab-btn" onclick="openTab(3)">RAW</button>
    </div>

    <div class="tab-content" style="display: block;">
      <img src="short.png" alt="Short tide graph">
    </div>

    <div class="tab-content">
      <img src="medium.png" alt="Medium tide graph">
    </div>

    <div class="tab-content">
      <img src="long.png" alt="Long tide graph">
    </div>

    <div class="tab-content">
      <img src="raw.png" alt="Raw tilt data w/o debias and adjust">
    </div>

    <h3>High Tide Danger</h3>

    <div class="static" style="display:block; text-align: center;">
      <img src="tide.png" alt="Raw tilt data w/o debias and adjust">
    </div>

    <script>
      function openTab(index) {
          const contents = document.querySelectorAll(".tab-content");
          const buttons = document.querySelectorAll(".tab-btn");

          contents.forEach(c => c.style.display = "none");
          buttons.forEach(b => b.classList.remove("active"));

          contents[index].style.display = "block";
          buttons[index].classList.add("active");
      }
    </script>

  </body>
</html>
